<%= form_for(@member, html: {onsubmit: 'return checkForm($("#exampleInputEmail4"), $("#exampleInputEmail5"))'}) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation" class="form-group">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "First Name", for: "exampleInputEmail1" %>
    <%= f.text_field :first_name, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter First Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label "Last Name", for: "exampleInputEmail2" %>
    <%= f.text_field :last_name, class: "form-control", id: "exampleInputEmail2", placeholder: "Enter Last Name" %>
  </div>
  <div class="form-group">
    <%= f.label "Email", for: "exampleInputEmail3" %>
    <%= f.email_field :email, class: "form-control", id: "exampleInputEmail3", placeholder: "Enter Email", required: true %>
  </div>
  <div class="form-group">
    <%= f.label "Phone1", for: "exampleInputPhone1" %>
    <%= f.text_field :phone1, class: "form-control", id: "exampleInputPhone", placeholder: "Enter Phone1" %>
  </div>
   <div class="form-group">
    <%= f.label "Phone2", for: "exampleInputPhone2" %>
    <%= f.text_field :phone2, class: "form-control", id: "exampleInputPhone", placeholder: "Enter Phone2" %>
  </div>
  <div class="form-group">
    <%= f.label "Date of Birth", for: "exampleInputDOB" %>
    <%= f.date_field :dob, class: "form-control", id: "exampleInputDOB", placeholder: "Enter DOB" %>
  </div>
  <div class="form-group">
    <%= f.label "Membership Type" %>
    <% for membership in Membership.all %>
      <%= f.radio_button('membership_type',membership.id, class: "membership_type", required: true) %><%= membership.membership_type %>
    <%end%>
  </div>
  <div class="form-group">
    <%= f.label "Start Date", for: "exampleInputEmail4" %>
    <%= f.date_field :start_date, class: "form-control", id: "exampleInputEmail4", placeholder: "Enter Start Date", required: true, title: "Select membership type first", disabled: true %>
  </div>
  <div class="form-group">
    <%= f.label "End Date", for: "exampleInputEmail5" %>
    <%= f.date_field :end_date, class: "form-control", id: "exampleInputEmail5", placeholder: "Enter End Date", required: true, title: "Select start date first", disabled: true %>
  </div>
    <span id="charges_table_1" style="display:none;">
        <div class="form-group">
            <center><p class="bg-info" style="padding:10px;"><span style='float: left'><label><input type="checkbox" name="add_on_200[]" value="football"> Charge: 200 (per hour per week) </label></span>Following activities you will get:</p></center>
            <table class="table table-striped">
                <thead>
                    <% @default_flat_200.each_with_index do |charge, index| %>
                        <%= "<tr>".html_safe if index == 0 || index == 6 %>
                        <%= "<td>#{charge.activity.activity_name}</td>".html_safe %>
                        <% "</tr>".html_safe if index == 5 %>
                    <% end %>
                </thead>
            </table>
        </div>
        <div class="form-group">
            <p class="bg-info" style="padding:10px;"><b>Choose Activities:</b></p>
            <table class="table table-striped">
                <thead>
                    <tr><th>Activity</th><th>Charge (per hour per week)</th></tr>
                </thead>
                <tbody>
                    <% @per_hr_200.each_with_index do |charge, index| %>
                        <%= "<tr><td><div class='checkbox'><label>#{charge.activity.activity_name}</label></div></td><td><div class='checkbox'><label><input type='checkbox' name='200_per_hr[]' value='#{charge.id}'>#{charge.charge}</label></div></td></tr>".html_safe %>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <center><p class="bg-info" style="padding:10px;">Add on activities</p></center>
            <table class="table table-striped">
                <thead>
                    <tr><th>Activity</th>
                        <th>3 Visits Per Week</th>
                        <th>4 Visits Per Week</th>
                        <th>5 Visits Per Week</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% (0..3).each do |i| %>
                    <tr>
                        <td><%= @summer_1_per_hr_per_week[i].activity.activity_name %>
                        <%= "<td><input type='radio' name='summer_#{@summer_1_per_hr_per_week[i].activity.id}_#{i}' value='#{@summer_1_per_hr_per_week[i].charge}'>#{@summer_1_per_hr_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='summer_#{@summer_1_per_hr_per_week[i].activity.id}_#{i}' value='#{@summer_2_per_hr_per_week[i].charge}'>#{@summer_2_per_hr_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='summer_#{@summer_1_per_hr_per_week[i].activity.id}_#{i}' value='#{@summer_3_per_hr_per_week[i].charge}'>#{@summer_3_per_hr_per_week[i].charge}</td>".html_safe %>
                        <%= "<td id='total_#{@summer_1_per_hr_per_week[i].id}'>0</td>".html_safe %>
                        <td><span style='cursor:default' class='deselect_football' onclick="$('input[type=radio][name=summer_<%=@summer_1_per_hr_per_week[i].activity.id%>_<%=i%>]:checked').attr('checked', false);$('#total_<%=@summer_1_per_hr_per_week[i].id%>').html('0');"><i class='fa fa-times-circle-o'></i></span></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <p class="bg-success" style="padding:10px;"><b>Total: 500</b></p>
        </div>
    </span>
    <span id="charges_table_2" style="display:none;">
        <div class="form-group">
            <center><p class="bg-info" style="padding:10px;"><label style='float: left'><input type='checkbox' name='addon_membership_2000' value='membership_2000'> Charge: 2000 </label>Following activities you will get:</p></center>
            <table class="table table-striped">
                <thead>
                    <% @default_flat_2000.each_with_index do |charge, index| %>
                        <% if index == 0 || index == 5 %>
                            <%= '<tr>'.html_safe %>
                        <% end %>
                        <%= "<td>#{charge.activity.activity_name}</td>".html_safe %>
                        <%= "</tr>".html_safe if index == 4 || index == 9 %>
                    <% end %>
                    <%= "<td></td><td></td><td></td><td></td></tr>".html_safe %>
                </tr></thead>
            </table>
        </div>
        <div class="form-group">
            <center><p class="bg-info" style="padding:10px;">Add on activities</p></center>
            <table class="table table-striped">
                <thead>
                    <tr><th>Activity</th>
                        <th>3 Visits Per Week</th>
                        <th>4 Visits Per Week</th>
                        <th>5 Visits Per Week</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% (0..2).each do |i| %>
                    <tr>
                        <td><%= @member_3_per_week[i].activity.activity_name %>
                        <%= "<td><input type='radio' name='member_#{@member_3_per_week[i].activity.id}_#{i}' value='#{@member_3_per_week[i].charge}'>#{@member_3_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='member_#{@member_3_per_week[i].activity.id}_#{i}' value='#{@member_4_per_week[i].charge}'>#{@member_4_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='member_#{@member_3_per_week[i].activity.id}_#{i}' value='#{@member_5_per_week[i].charge}'>#{@member_5_per_week[i].charge}</td>".html_safe %>
                        <%= "<td id='total_#{@member_3_per_week[i].id}'>0</td>".html_safe %>
                        <td><span style='cursor:default' class='deselect_football' onclick="$('input[type=radio][name=member_<%=@member_3_per_week[i].activity.id%>_<%=i%>]:checked').attr('checked', false);$('#total_<%=@member_3_per_week[i].id%>').html('0');"><i class='fa fa-times-circle-o'></i></span></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <center><p class="bg-info" style="padding:10px;">Summer Activities</p></center>
            <table class="table table-striped">
                <thead>
                    <tr><th>Add on Activities</th>
                        <th>1 Visits Per Week</th>
                        <th>2 Visits Per Week</th>
                        <th>3 Visits Per Week</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% (0..4).each do |i| %>
                    <tr>
                        <td><%= @member_summer_1_per_week[i].activity.activity_name %>
                        <%= "<td><input type='radio' name='member_summer_#{@member_summer_1_per_week[i].activity.id}_#{i}' value='#{@member_summer_1_per_week[i].charge}'>#{@member_summer_1_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='member_summer_#{@member_summer_1_per_week[i].activity.id}_#{i}' value='#{@member_summer_2_per_week[i].charge}'>#{@member_summer_2_per_week[i].charge}</td>".html_safe %>
                        <%= "<td><input type='radio' name='member_summer_#{@member_summer_1_per_week[i].activity.id}_#{i}' value='#{@member_summer_3_per_week[i].charge}'>#{@member_summer_3_per_week[i].charge}</td>".html_safe %>
                        <%= "<td id='total_#{@member_summer_1_per_week[i].id}'>0</td>".html_safe %>
                        <td><span style='cursor:default' class='deselect_football' onclick="$('input[type=radio][name=member_summer_<%=@member_summer_1_per_week[i].activity.id%>_<%=i%>]:checked').attr('checked', false);$('#total_<%=@member_summer_1_per_week[i].id%>').html('0');"><i class='fa fa-times-circle-o'></i></span></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <p class="bg-success" style="padding:10px;"><b>Total: 500</b></p>
        </div>
    </span>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
