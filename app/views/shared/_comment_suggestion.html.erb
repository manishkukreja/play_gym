<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Comments and Suggestions are always welcome!!</h4>
      </div>
      <div class="modal-body">
        <%= form_tag({controller: comments_path, action: :create}, method: :post, class: "form-vertical", role: "form", remote: true) do %>
          <div class="form-group">
            <%= label_tag "Email" %>
            <%= email_field :email, "", class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= label_tag "Phone" %>
            <%= text_field :phone, "", class: "form-control", placeholder: "Phone" %>
          </div>
          <div class="form-group">
            <%= label_tag "Comment" %>
            <%= text_area :comment, "", class: "form-control", placeholder: "Type your comment here.." %>
          </div>
          <div class="form-group">
            <%= submit_tag "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- , "data-dismiss" => "modal" -->